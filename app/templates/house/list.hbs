                                      </div>
                                      <div class="op fr">
                                        {{#if listing.model.listStep}}
                                          {{#link-to 'house.manage' house.id (query-params activeId=listing.model.id)}}
                                              <button class="op-btn btn-to-list">
                                                {{format-step house.listStep}} to list
                                              </button>
                                          {{/link-to}}
                                        {{else}}
                                            <div class="list-status">
