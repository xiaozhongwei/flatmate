<div class="white_bg">
    <div class="container margin_60" style="padding-top:10px;">
        <div class="row">
            <aside class="col-lg-3 col-md-3">
                <h2>List Your Apt</h2>
                <div class="other_tours " style="position: relative; margin-top:20px;background: rgb(247,247,247);padding: 10px 15px 15px 15px;min-height: 500px;">
                    <ul>
                        <li><a href="javascript:;" {{action "changeStep" 1}}>Calendar<span class="other_tours_price"><span style="color:rgb(0,150,163)" class=" icon-ok"></span></span></a></li>
                        <li><a href="javascript:;" {{action "changeStep" 2}}>Overview <span class="other_tours_price"><span  class=" icon-ok"></span></span></a></li>
                        <li><a href="javascript:;" {{action "changeStep" 3}}>Photo<span class="other_tours_price"><span  class=" icon-ok"></span></span></a></li>
                        <li><a href="javascript:;" {{action "changeStep" 4}}>Map<span class="other_tours_price"><span class=" icon-ok"></span></span></a></li>
                    </ul>
                    <div style="position: absolute;bottom:80px;width:88%;text-align: center;font-weight: bold;font-size:15px;">4 steps to</div>
                    <div style="position: absolute;background: rgb(219,219,219);padding: 15px 5px; bottom: 20px;color: white;width: 88%;font-size: 17px;text-align: center;">List the room</div>
                </div>
            </aside>
            <div class="col-md-8 col-md-offset-1">
              {{#if (eq step 1)}}
                  <h2>Calendar</h2>
                  <div style="background:rgb(229,245,246) ;border:1px solid rgb(229, 245, 246);padding-top:3px;padding-left:10px; height: 80px;margin-top:20px;width: 100%">
                    {{#if session.user.logo.downloadFilePath}}
                        <img style="border-radius:50%;width:60px;margin-right:10px;border:1px solid white"
                             src={{session.user.logo.downloadFilePath}} title={{session.user.firstName}} />
                    {{else}}
                        <img style="border-radius:50%;width:60px;margin-right:10px;border:1px solid white"
                             src="images/user_unknown.png" title={{session.user.firstName}}>
                    {{/if}}
                    <span style="display: inline-block;margin-left:20px;font-size:18px;padding-top:26px;font-weight: bold;">Starting day of you listing?</span>
                  </div>
                  <div class="box_style_2" style="border-top:none;border-radius: 0">
                    {{un-calendar selectedDate=availableDate showNextMonth=false showPrevMonth=false}}
                  </div>
                  <a href="javascript:;" class="btn_1 pull-right" {{action "save" model}}>Next</a>
              {{/if}}
              {{#if (eq step 2)}}
                  <h2>Overview</h2>
                  <div style="background:rgb(229,245,246) ;border:1px solid rgb(229, 245, 246);padding-top:3px;padding-left:10px; height: 80px;margin-top:20px;width: 100%">
                      {{#if session.user.logo.downloadFilePath}}
                          <img style="border-radius:50%;width:60px;margin-right:10px;border:1px solid white"
                               src={{session.user.logo.downloadFilePath}} title={{session.user.firstName}} />
                      {{else}}
                          <img style="border-radius:50%;width:60px;margin-right:10px;border:1px solid white"
                               src="images/user_unknown.png" title={{session.user.firstName}}>
                      {{/if}}
                      <span style="display: inline-block;margin-left:20px;font-size:18px;padding-top:26px;font-weight: bold;">Hi! Tell people about your beautiful apartment</span>
                  </div>
                  <div style="margin-top:20px;margin-bottom:20px; border:1px solid rgb(217, 217, 217);padding-top:3px;padding-left:10px; height: 80px;margin-top:20px;width: 100%">
                      <span class="radius-number-1 radius-number-gary" style="display: inline-block;margin-right:5px;">A</span>
                      <span class="radius-number-1 radius-number-gary" style="display: inline-block;margin-right:5px;">B</span>
                      <span class="radius-number-1 radius-number-gary" style="display: inline-block;margin-right:5px;">C</span>
                      <span style="display: inline-block;margin-left:40px;color:rgb(202,202,202);font-size:15px;padding-top:26px;font-weight: bold;">Hongkou → Si He Yuan, 154 → Apt. 10</span>
                  </div>

                  <div class="panel panel-default">
                      <div class="panel-heading">
                          <h3 class="panel-title" style="font-size:22px;padding:5px 0;">Basics</h3>
                      </div>
                      <div class="panel-body">
                          <form class="form-horizontal" action="#">
                              <div class="form-group">
                                  <label class="col-md-2 control-label">Area</label>
                                  <div class="col-md-6">
                                    {{select-2
                                    content=areaMapping
                                    value=model.area
                                    optionValuePath="id"
                                    placeholder="Choose the Area"
                                    }}
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="col-md-2 control-label">Compound</label>
                                  <div class="col-md-6">
                                    {{select-2
                                    content=compoundMapping
                                    value=model.compound
                                    optionValuePath="id"
                                    placeholder="Choose the Compound"
                                    }}
                                  </div>
                              </div>

                              <div class="form-group">
                                  <label class="col-md-2 control-label">Metro</label>
                                  <div class="col-md-6">
                                    {{select-2
                                    content=stationMapping
                                    value=model.metro
                                    optionValuePath="id"
                                    multiple=true
                                    placeholder="Choose the Metro"
                                    }}
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="col-md-2 control-label">Size</label>
                                  <div class="col-md-2">
                                    {{input class="form-control" type="text" autocomplete="off" value=model.size}}
                                  </div>
                              </div>
                              <div class="form-group" style="padding-top: 30px">
                                  <label class="col-md-2 control-label"></label>
                                  <div class="col-md-2">
                                      Building
                                    {{select-2
                                    content=buildingMapping
                                    value=model.building
                                    optionValuePath="id"
                                    }}
                                  </div>
                                  <div class="col-md-2">
                                      Floor
                                    {{select-2
                                    content=floorMapping
                                    value=model.floor
                                    optionValuePath="id"
                                    }}
                                  </div>
                                  <div class="col-md-2">
                                      Doorplate
                                    {{input class="form-control" type="text" autocomplete="off" value=model.doorplate}}
                                  </div>
                              </div>
                              <div class="form-group">
                                  <label class="col-md-2 control-label"></label>
                                  <div class="col-md-2">
                                      Bedrooms
                                    {{select-2
                                    content=roomNumberMapping
                                    value=model.bedrooms
                                    optionValuePath="id"
                                    }}
                                  </div>
                                  <div class="col-md-2">
                                      Bathrooms
                                    {{select-2
                                    content=roomNumberMapping
                                    value=model.bathrooms
                                    optionValuePath="id"
                                    }}
                                  </div>
                                  <div class="col-md-2">
                                      Living Rooms
                                    {{select-2
                                    content=roomNumberMapping
                                    value=model.livingRooms
                                    optionValuePath="id"
                                    }}
                                  </div>
                              </div>
                          </form>
                      </div>
                  </div>

                {{#each model.listings as |listing index|}}
                  {{#unless index}}
                      <div class="panel panel-default">
                          <div class="panel-heading">
                              <h3 class="panel-title" style="font-size:22px;padding:5px 0;">Description and Payment</h3>
                          </div>
                          <div class="panel-body">
                              <form class="form-horizontal" action="#">
                                  <div class="form-group">
                                      <label class="col-md-2 control-label">Title</label>

                                      <div class="col-md-8">
                                        {{input class="form-control" type="text" autocomplete="off" placeholder="Write a title" value=listing.title}}
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-md-2 control-label">Description</label>

                                      <div class="col-md-8">
                                        {{textarea class="form-control" type="area" rows="5" placeholder="Help other people get to know your apartment." value=listing.description}}
                                      </div>
                                  </div>
                                  <div class="form-group" style="padding-top: 30px">
                                      <label class="col-md-2 control-label">Pay cycle</label>

                                      <div class="col-md-8">
                                        {{input class="form-control" type="text" autocomplete="off" placeholder="换成1 3 6 12"}}
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-md-2 control-label">Price</label>
                                      <div class="col-md-2">
                                        {{input class="form-control" type="text" autocomplete="off" value=listing.perMonthPrice}}
                                      </div>
                                      <div class="col-md-2">
                                        {{input class="form-control" type="text" autocomplete="off" value=listing.perThreeMonthPrice}}
                                      </div>
                                      <div class="col-md-2">
                                        {{input class="form-control" type="text" autocomplete="off" value=listing.perSixMonthPrice}}
                                      </div>
                                      <div class="col-md-2">
                                        {{input class="form-control" type="text" autocomplete="off" value=listing.perYearPrice}}
                                      </div>
                                  </div>
                                  <div class="form-group">
                                      <label class="col-md-2 control-label">Deposit</label>
                                      <div class="col-md-2">
                                        {{input class="form-control" type="text" autocomplete="off" value=listing.deposit}}
                                      </div>
                                  </div>
                              </form>
                          </div>
                      </div>
                  {{/unless}}
                {{/each}}

                  <div class="panel panel-default">
                      <div class="panel-heading">
                          <h3 class="panel-title" style="font-size:22px;padding:5px 0;">Amenities</h3>
                      </div>
                      <div class="panel-body">
                        {{multi-checkboxes options=amenityMapping valueProperty='index' labelProperty='name' selection=model.amenities}}
                      </div>
                  </div>

                  <a href="javascript:;" class="btn_1 pull-right" {{action "save" model}}>Next</a>
              {{/if}}

              {{#if (eq step 3)}}
                  <h2>Photo</h2>

              {{/if}}
            </div>
        </div>
    </div>
</div>