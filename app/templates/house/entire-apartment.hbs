<style>
    .inactive {
        color: rgb(235,235,235) !important;
    }
    .step-unfinish {
        color: rgb(163, 0, 0) !important;
    }
    .step-finish {
        color: rgb(0,150,163) !important;
    }
</style>

<div class="white_bg">
    <div class="container margin_60" style="padding-top:10px;">
        <div class="row">
            <aside class="col-lg-3 col-md-3">
                <h2>List Your Apt</h2>
                <div class="other_tours " style="position: relative; margin-top:20px;background: rgb(247,247,247);padding: 10px 15px 15px 15px;min-height: 500px;">
                    <ul>
                        <li><a href="javascript:;" {{action "changeStep" 1}}>Calendar<span class="other_tours_price"><span class="{{if model.isCalendarFinished 'icon-ok step-finish' 'icon-plus step-unfinish'}}"></span></span></a></li>
                        <li><a href="javascript:;" {{action "changeStep" 2}}>Overview <span class="other_tours_price"><span  class="{{if model.isOverviewFinished 'icon-ok step-finish' 'icon-plus step-unfinish'}}"></span></span></a></li>
                        <li><a href="javascript:;" {{action "changeStep" 3}}>Photo<span class="other_tours_price"><span  class="{{if model.isPhotoFinished 'icon-ok step-finish' 'icon-plus step-unfinish'}}"></span></span></a></li>
                        <li><a href="javascript:;" {{action "changeStep" 4}}>Map<span class="other_tours_price"><span class="{{if model.isMapFinished 'icon-ok step-finish' 'icon-plus step-unfinish'}}"></span></span></a></li>
                    </ul>
                  {{#if model.listStep}}
                    <div style="position: absolute;bottom:80px;width:88%;text-align: center;font-weight: bold;font-size:15px;">{{model.listStep}} to</div>
                    <div style="position: absolute;background: rgb(219,219,219);padding: 15px 5px; bottom: 20px;color: white;width: 88%;font-size: 17px;text-align: center;">List the room</div>
                  {{else}}
                    <div style="position: absolute;bottom: 20px;width: 88%;text-align: center;">
                        <a href="javascript:;" class="btn_map" {{action "changeStatus"}}>
                            {{#if model.listings.firstObject.published}}
                              unlist the room
                            {{else}}
                              List the room
                            {{/if}}
                        </a>
                    </div>
                  {{/if}}
                </div>
            </aside>
            <div class="col-md-8 col-md-offset-1">
              {{#if (eq step 1)}}
                  {{render 'house.manage.calendar' model.listings.firstObject}}
                  <a href="javascript:;" class="btn_1 pull-right" {{action "changeStep" 2}}>Next</a>
              {{/if}}
              {{#if (eq step 2)}}
                  {{render 'house.manage.apartment-overview' model}}
                  <a href="javascript:;" class="btn_1 pull-right" {{action "changeStep" 3}}>Next</a>
              {{/if}}
              {{#if (eq step 3)}}
                {{render 'house.manage.room-photo' model.listings.firstObject}}
                <a href="javascript:;" class="btn_1 pull-right" {{action "changeStep" 4}}>Next</a>
              {{/if}}
              {{#if (eq step 4)}}
                {{render 'house.manage.map' model}}
              {{/if}}
            </div>
        </div>
    </div>
</div>