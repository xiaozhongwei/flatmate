<div class="white_bg">
    <div class="container margin_60" style="padding-top:10px;">
        <div class="row">
            <aside class="col-lg-3 col-md-3">
                <h2>List Your Apt</h2>
                <div class="other_tours " style="position: relative; margin-top:20px;background: rgb(247,247,247);padding: 10px 15px 15px 15px;min-height: 500px;">
                    <ul>
                        <li><a href="javascript:;" {{action "changeStep" 1}}>Calendar<span class="other_tours_price"><span style="color:rgb(0,150,163)" class=" icon-ok"></span></span></a></li>
                        <li><a href="javascript:;" {{action "changeStep" 2}}>Overview <span class="other_tours_price"><span  class=" icon-ok"></span></span></a></li>
                        <li><a href="javascript:;" {{action "changeStep" 3}}>Photo<span class="other_tours_price"><span  class=" icon-ok"></span></span></a></li>
                        <li><a href="javascript:;" {{action "changeStep" 4}}>Map<span class="other_tours_price"><span class=" icon-ok"></span></span></a></li>
                    </ul>
                    <div style="position: absolute;bottom:80px;width:88%;text-align: center;font-weight: bold;font-size:15px;">4 steps to</div>
                    <div style="position: absolute;background: rgb(219,219,219);padding: 15px 5px; bottom: 20px;color: white;width: 88%;font-size: 17px;text-align: center;">List the room</div>
                </div>
            </aside>
            <div class="col-md-8 col-md-offset-1">
              {{#if (eq step 1)}}
                  {{render 'house.manage.calendar' model.listings.firstObject}}
                  <a href="javascript:;" class="btn_1 pull-right" {{action "save" model}}>Next</a>
              {{/if}}
              {{#if (eq step 2)}}
                  {{render 'house.manage.apartment-overview' model}}
                  <a href="javascript:;" class="btn_1 pull-right" {{action "save" model}}>Next</a>
              {{/if}}

              {{#if (eq step 3)}}
                  <h2>Photo</h2>

              {{/if}}
            </div>
        </div>
    </div>
</div>