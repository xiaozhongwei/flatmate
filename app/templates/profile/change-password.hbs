{{#view 'profile/profile-layout'}}
    <form class="form-horizontal" action="#">
        <div class="form-group">
            <label class="col-md-3 control-label">Current Password</label>

            <div class="col-md-6">
              {{input class="form-control" type="password" autocomplete="off" placeholder="current password" value=model.oldPassword}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">New Password</label>

            <div class="col-md-6">
              {{input class="form-control" type="password" autocomplete="off" placeholder="new password" value=model.password}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-3 control-label">New Password Again</label>

            <div class="col-md-6">
              {{input class="form-control" type="password" autocomplete="off" placeholder="new password again" value=model.passwordConfirmation}}
            </div>
        </div>
        <hr/>
        <input class="btn btn-primary" type="submit" {{action "save" model}} value="Change Password"/>
    </form>
{{/view}}
