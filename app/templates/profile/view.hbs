<div class="white_bg">
    <div class=" container" style="padding-top:25px; padding-bottom:15px;">
        <div class="row">
            <div class="col-md-2">
                <div class="widget">
                    <div id="tour_guide">
                        <p>
                          {{#if model.photo}}
                              <img src={{model.photo}} alt="" style="width:180px;float:left" class="img-circle styled"/>
                          {{else}}
                              <img src="/images/testimonial_1.jpg" alt="" style="width:180px;float:left" class="img-circle styled">
                          {{/if}}
                        </p>
                    </div>
                </div><!-- End Search -->
            </div>
            <div class="col-md-10" style="padding-left:20px;">
                <h1>{{model.fullName}}</h1>
                <h5>Member Since {{model.createTime}}</h5>
                <h5>{{#link-to 'profile.edit-profile'}}Edit profile{{/link-to}}</h5>
                <h4  style="margin-top:45px;margin-bottom: 5px;">{{model.country}}</h4>
                <h4  style="  margin-top: 5px; margin-bottom: 5px;">{{model.occupation}}</h4>
                <h4 style="  margin-top: 5px; margin-bottom: 5px;">{{format-gender model.gender}}</h4>
            </div>
        </div>
    </div>
</div>
<style>
    td:first-child {
        padding-right: 20px;
        font-weight: bold;
    }
</style>
<div class="container"  style="padding-top:15px; padding-bottom:60px;">
    <div class="row">
        <div class="col-md-7 col-md-offset-2" style="padding-right:20px;padding-left:20px;">
            <h3>About Me</h3>
            <p style="margin-top:30px;font-size: 14px;line-height: 1.6;">{{model.description}}</p>
            <hr style="margin-top:40px;margin-bottom:40px;">
            <table>
                <thead>
                    <tr>
                        <td style="padding-right:20px;"></td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                <tr>
                    <td>E-Mail</td>
                    <td >
                        {{model.email}}
                    </td>
                </tr>
                <tr>
                    <td>Phone Number</td>
                    <td>{{model.phone}}</td>
                </tr>
                <tr>
                    <td>WeChart</td>
                    <td>{{model.wechat}}</td>
                </tr>
                </tbody>
            </table>
        </div>
        {{#if model.listingsCount}}
            <aside class="col-md-3">
                <h3 style="margin-bottom:30px;">Listing ({{model.listingsCount}})</h3>
                <div class="tour_container">
                    <div class="img_container">
                      {{#link-to 'listing.detail' model.latestListing.id}}
                          <img src="{{if model.latestListing.coverPhoto model.latestListing.coverPhoto.imageUrl 'images/post-5.jpg'}}" width="800" height="533" class="img-responsive" alt="">
                          <!--<div class="ribbon top_rated"></div>-->
                          <div class="short_info">
                              <span class="price"><sup>￥</sup>TODO</span>
                          </div>
                      {{/link-to}}
                    </div>
                    <div class="tour_title listing">
                        <ul class="stats" style="padding-left: 0;">
                            <li>Type
                                <span>{{if model.latestListing.house.isShared 'Room' 'Apt'}}</span>
                            </li>
                            <li>Rooms<span>{{model.latestListing.house.bedrooms}}</span></li>
                            <li>Size, m2<span>{{model.latestListing.house.size}}</span></li>
                        </ul>
                        <div style="clear:both"></div>
                        <hr style="margin: 10px -15px 10px -15px">
                        <h3 style="text-transform:none;">{{model.latestListing.title}}</h3>

                        <p style="min-height:80px;">{{model.latestListing.house.area}}</p>
                        <ul class="add_info">
                          {{#each model.latestListing.house.subwayLines as |subwayLine|}}
                              <li>
                                  <span style="display: inline-block">{{subwayLine}}</span>
                              </li>
                          {{/each}}
                        </ul>
                    </div>
                </div>
                <!--<img src="/images/tour_box_8.jpg" width="800" height="333" class="img-responsive" alt="">-->
                {{#link-to 'listing.list' (query-params userId=model.id)}}View all Listings →{{/link-to}}
            </aside>
        {{/if}}

    </div>
</div>