<header style="position:inherit;background:white;">
    <div id="top_line" style="border-bottom:none;font-size:13px">
        <div class="container" style="color:rgb(51,51,51)">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-6" style="font-size:15px;padding-top:8px"><strong>FlatmateShanghai</strong> </div>
                <div class="col-md-6 col-sm-6 col-xs-6" >
                    <ul id="top_links">
                        <li>
                          {{#if session.isAuthenticated}}
                            {{#link-to 'profile.dashboard'}}
                                <img style="border-radius:50%;width:37px;margin-right:10px;border:1px solid white" src="/images/amaze_300x300.jpg" alt="Image Alternative text" title="AMaze">
                                <strong  style="color:black">Hi, {{session.user.firstName}}</strong>
                                <!--<a href="javascript:;" {{! action 'invalidateSession' }} >Logout</a>-->
                            {{/link-to}}
                          {{else}}
                              <div class="dropdown dropdown-access">
                                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="access_link">Sign in</a>
                                  <div class="dropdown-menu">
                                      <form {{action 'authenticate' on='submit'}}>
                                          <div class="row">
                                              <div class="col-md-6 col-sm-6 col-xs-6">
                                                  <a href="#" class="bt_facebook">
                                                      <i class="icon-facebook"></i>Facebook </a>
                                              </div>
                                              <div class="col-md-6 col-sm-6 col-xs-6">
                                                  <a href="#" class="bt_paypal">
                                                      <i class="icon-paypal"></i>Paypal </a>
                                              </div>
                                          </div>
                                          <div class="login-or">
                                              <hr class="hr-or">
                                              <span class="span-or">or</span>
                                          </div>
                                          <div class="form-group">
                                            {{input value=identification placeholder='Email' id="inputUsernameEmail" class='form-control'}}
                                          </div>
                                          <div class="form-group">
                                            {{input value=password placeholder='Password' id="inputPassword"  class='form-control' type='password'}}
                                          </div>
                                          <a id="forgot_pw" href="#">Forgot password?</a>
                                          <input type="submit" name="" value="Sign in" id="Sign_in" class="button_drop">
                                          <input type="submit" name="" value="Sign up" id="Sign_up" class="button_drop outline">
                                      </form>
                                  </div>
                              </div><!-- End Dropdown access -->
                          {{/if}}
                        </li>
                        <li><a><i class="icon_set_1_icon-84" style="color:#f7941d; margin-top:-15px; position: absolute;font-size: 25px;"></i></a></li>
                        <li style="margin-left: 33px;margin-right: 0">
                          {{#link-to 'listing.add' class="btn_1 btn-blue"}}
                              List your Room
                          {{/link-to}}</li>
                    </ul>
                </div>
            </div><!-- End row -->
        </div><!-- End container-->
    </div><!-- End top line-->
</header><!-- End Header -->

